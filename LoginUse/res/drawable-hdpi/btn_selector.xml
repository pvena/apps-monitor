<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
         <shape android:shape="rectangle"  >
             <corners android:radius="3dip" />
             <stroke android:width="1dip" android:color="#c53e2b" />
             <gradient  android:angle="-90"  android:startColor="@color/btn1Foc" android:endColor="@color/btn2Foc"  />            
         </shape>
    </item>    
    <item >
        <shape android:shape="rectangle"  >
             <corners android:radius="3dip" />
             <stroke android:width="1dip" android:color="@color/customblack" />
             <gradient  android:angle="-90"  android:startColor="@color/btn1" android:endColor="@color/btn2" />            
         </shape>
     </item>
</selector>
