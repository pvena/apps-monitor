<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/black"
    android:orientation="vertical" >
    
    <TextView
        android:id="@+id/locationTitle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:background="#777777"
        android:textColor="@android:color/white"
        android:textStyle="bold" 
        android:text="@string/LocationTitle"/>
    
    <RelativeLayout 
    android:layout_width="fill_parent"
    android:layout_height="50dp"
    android:padding="6dip" >
        <TextView
            android:id="@+id/txvEnabledGpsLocation"
            android:layout_width="fill_parent"
        	android:layout_height="fill_parent"
        	android:layout_alignParentRight="true"
        	android:ellipsize="middle"
        	android:singleLine="true"
            android:text="@string/txvEnabledGpsLocation"
            android:textColor="@android:color/primary_text_dark" />

        <CheckBox
            android:id="@+id/chbEnableGpsLocation"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentBottom="true"
        	android:layout_alignParentTop="true"
        	android:layout_marginRight="6dip"
            android:layout_alignRight="@+id/txvEnabledGpsLocation"
            android:textColor="@android:color/white" />

    </RelativeLayout>
	
	<View
    android:layout_width="fill_parent"
    android:layout_height="1dp"
    android:background="@android:color/darker_gray"/>
    
    <RelativeLayout 
    android:layout_width="fill_parent"
    android:layout_height="50dp"
    android:padding="6dip" >
        <TextView
            android:id="@+id/txvIntervalLocation"
            android:layout_width="fill_parent"
        	android:layout_height="fill_parent"
            android:text="@string/txvIntervalLocation"
            android:textColor="@android:color/primary_text_dark" />

        <EditText
            android:id="@+id/txtIntervalLocation"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:textSize="14sp"
            android:layout_alignRight="@+id/txvIntervalLocation"
            android:ems="10"
            android:inputType="number"
            android:text="@string/edtIntervalLocationDefault" >

            <requestFocus />
        </EditText>

    </RelativeLayout>

    <View
    android:layout_width="fill_parent"
    android:layout_height="1dp"
    android:background="@android:color/darker_gray"/>
    
    <RelativeLayout 
    android:layout_width="fill_parent"
    android:layout_height="50dp"
    android:padding="6dip" >
        <TextView
            android:id="@+id/txvMinDistanceLocation"
            android:layout_width="fill_parent"
        	android:layout_height="fill_parent"
            android:text="@string/txvMinDistanceLocation"
            android:textColor="@android:color/primary_text_dark" />

        <EditText
            android:id="@+id/txtMinDistanceLocation"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_alignRight="@+id/txvMinDistanceLocation"
            android:layout_alignTop="@+id/txvMinDistanceLocation"
            android:ems="10"
            android:inputType="number"
            android:text="@string/edtMinDistanceLocationDefault"
            android:textSize="14sp" />

    </RelativeLayout>
    
     <TextView
        android:id="@+id/CurrentActivityTitle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:background="#777777"
        android:textColor="@android:color/white"
        android:textStyle="bold" 
        android:text="@string/CurrentActivityTitle"/>
    
   <RelativeLayout 
    android:layout_width="fill_parent"
    android:layout_height="50dp"
    android:padding="6dip" >
        <TextView
            android:id="@+id/txvActivityConfidence"
            android:layout_width="fill_parent"
        	android:layout_height="fill_parent"
            android:text="@string/txvActivityConfidence"
            android:textColor="@android:color/primary_text_dark" />

        <EditText
            android:id="@+id/txtActivityConfidence"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:textSize="14sp"
            android:layout_alignRight="@+id/txvActivityConfidence"
            android:ems="10"
            android:inputType="number"
            android:text="@string/edtActivityConfidenceDefault" />

   </RelativeLayout>

   <TextView
       	android:id="@+id/SendInformationTitle"
       	android:layout_width="fill_parent"
       	android:layout_height="wrap_content"
       	android:textSize="16sp"
       	android:background="#777777"
       	android:textColor="@android:color/white"
       	android:textStyle="bold" 
       	android:text="@string/SendInfoTitle"/>
   
   <RelativeLayout 
    android:layout_width="fill_parent"
    android:layout_height="50dp"
    android:padding="6dip" >
    	<Button
       		android:id="@+id/sendLog"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_gravity="center"
        	android:text="@string/sendLogButton" />
	</RelativeLayout>
	
   <Button
     	android:id="@+id/saveConfiguration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/btnSaveConfiguration" />
</LinearLayout>