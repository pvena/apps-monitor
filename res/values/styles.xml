<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <color name="backgroundTitle">#5555AA</color>
    <color name="backgroundApp">#FEFEFE</color>
    <color name="customred">#AA2222</color>
    <color name="customwhite">#FFFFFF</color>
    <color name="customblack">#000000</color>
    <color name="btn1">#AA2222</color>
    <color name="btn2">#e0341e</color>
    <color name="btn1Foc">#AA7777</color>
    <color name="btn2Foc">#e0896f</color>
    <color name="tab1">#FFFFFF</color>
    <color name="tab2">#EEEEEE</color>
    <color name="tab1Foc">#FFAAAA</color>
    <color name="tab2Foc">#e0341e</color>
    
	<style name="btnStyle" parent="@android:style/Widget.Button">
       <item name="android:textSize">15sp</item>
       <item name="android:textStyle">bold</item>
       <item name="android:textColor">#FFFFFF</item>
       <item name="android:gravity">center</item>
       <item name="android:shadowColor">#000000</item>
       <item name="android:shadowDx">1</item>
       <item name="android:shadowDy">1</item>
       <item name="android:shadowRadius">0.6</item>
       <item name="android:background">@drawable/btn_selector</item>
       <item name="android:padding">10dip</item>
   </style>
   
   <style name="tabStyle" parent="@android:style/Widget.Button">
       <item name="android:background">@drawable/tab_selector</item>
       <item name="android:paddingBottom">3dp</item>    
       <item name="android:textColor">@color/customblack</item>   
   </style>
   
   <style name="titleStyle" parent="@android:style/Widget.Button">
       <item name="android:background">@color/customred</item>
       <item name="android:textColor">#FFFFFF</item>       
   </style>
</resources>